<%= form_tag tasks_path, :method => 'get' do |f| %>
<div class="ui form">
  <div class="four fields">
    <div class="field">
      <div class="ui input">
        <%= select_tag :project, options_for_select(Project.all.collect {|u| [ u.name, u.id ] }), :include_blank => "Project"%>
      </div>
    </div>
    <div class="field">
      <div class="ui input">
        <%= select_tag :status, options_for_select(Task.status), :include_blank => "Status"%>
      </div>
    </div>
    <div class="field">
      <div class="ui input">
        <%= select_tag :priority, options_for_select(Task.priority), :include_blank => "Priority"%>
      </div>
    </div>
    <div class="field">
      <div class="ui input">
        <%= select_tag :tst, options_for_select(User.all.collect {|u| [ u.email[0,4], u.id ] }), :include_blank => "Tester"%>
      </div>
    </div>
    <div class="field">
      <div class="ui input">
        <%= select_tag :dev, options_for_select(User.all.collect {|u| [ u.email[0,4], u.id ] }), :include_blank => "Developer"%>
      </div>
    </div>
    <div class="actions">
      <%= submit_tag "Filter tasks", class: 'ui primary button' %>
    </div>
  </div>
</div>
<% end %>